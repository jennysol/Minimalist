<div class="row">
  <% @potential_to_follow.each do |user| %>
    <div class="col-lg-4">
      <div class="card">
        <h5 class="card-header"><%= image_tag(user.avatar, class: "ui-w-100-forced rouded-circle mr-3", style: "width: 90px; height: 90px") %> <%= user.name %></h5>
        <div class="card-body">
          Email:<p class="card-text text-muted"><%= user.email %></p>
          Telefone:<p class="card-text text-muted"><%= user.phone %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>