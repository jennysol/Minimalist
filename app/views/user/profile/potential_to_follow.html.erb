<h1>Novas Conexões</h1>
<p class="mb-4">Pessoas para fazer novas conexões</p>
<div class="row">
  <% @potential_to_follow.each do |user| %>
    <div class="col-lg-4">
      <div class="card">
        <%= render("user_card_header", user: user) %>
        <div class="card-body">
          Email:<p class="card-text text-muted"><%= user.email %></p>
          Telefone:<p class="card-text text-muted"><%= user.phone %></p>
          <%= link_to("Seguir", user_follow_path(user), method: :post, class: "btn btn-success")%>
        </div>
      </div>
    </div>
  <% end %>
</div>